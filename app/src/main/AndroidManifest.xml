<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.playgilround.schedule.client">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ScheduleApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/NoActionBar">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".signup.SignUpActivity" />

        <activity android:name=".singin.SignInActivity" />

        <activity android:name=".activity.ScheduleCalendarActivity" />

        <activity
            android:name=".activity.AddScheduleActivity"
            android:theme="@style/ThemeDialog" />

        <activity
            android:name=".activity.SetLocationActivity"
            android:theme="@style/ThemeDialog" />

        <activity
            android:name=".activity.ScheduleInfoActivity"
            android:theme="@style/ThemeDialog" />

        <activity android:name=".activity.MainActivity" />

        <activity android:name=".activity.TutorialActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.ManyScheduleActivity"
            android:theme="@style/ThemeDialog"/>
    </application>

</manifest>